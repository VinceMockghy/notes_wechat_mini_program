/**index.wxss**/
page {
    background: #efeff4;
}

.container {
    flex-wrap: wrap;
    background: #efeff4;
}

.col {
    width: 26%;
    padding-top: 33%;
    margin: 25rpx 3.666666%;
    position: relative;
}

.item {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    overflow: hidden;
    position: absolute;
    box-sizing: border-box;
    top: 0;
    display: flex;
    flex-direction: column;
}

.item .content,
.item .bottom {
    flex: 1;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    justify-content: center;
}
.item .bottom{
    height: 80rpx;
    background: #9f7968;
    font-size: 22rpx;

}
.item .txt {
    flex: 1;
    text-align: center;
}

.item .content .txt {
    padding: 0 5%;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    display: box;
    box-orient: vertical;
    line-clamp: 3;
}

.item.note {
    background: #fff;
}